generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Room {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  members Member[]
  bills   Bill[]
}

model Member {
  id      Int     @id @default(autoincrement())
  name    String
  roomId  Int
  room    Room    @relation(fields: [roomId], references: [id], onDelete: Cascade)
}

model Bill {
  id          Int     @id @default(autoincrement())
  title       String
  amountCents Int
  roomId      Int
  room        Room    @relation(fields: [roomId], references: [id], onDelete: Cascade)
}
